@model DutyFree.Models.AdminViewModel

@{
    ViewBag.Title = Model.CurrentUser.Name;
    Layout = "_Layout";
}

<section class="hero2">
    <div class="container">
        <h1 class="display-4 text-white text-center"><strong>Uživatelský profil</strong></h1>
    </div>
</section>


<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="profile-picture">
                <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Profile picture">
            </div>
        </div>
        <div class="col-8">
            <h2>@Model.CurrentUser.Name</h2>
            <h3>@Model.CurrentUser.Email</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="tabulka">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Produkt</th>
                    <th scope="col">Datum a čas</th>
                    <th scope="col">Množství</th>
                    <th scope="col">Cena</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<style>
    ::selection {
        background-color: #FF4401;
        color: white;
    }
    
    .profile-picture img
    {
        width: 175px;
        height: 175px;
        margin-top: 5%;
        }
        
    .col-8 h2
    {
        margin-top: 5%;
        font-size: 50px;
        }
                
    .col-8 h3
    {
        margin-top: 2%;
        font-weight: lighter;
        font-size: 35px;
        }

    .tabulka
    {
        padding-top: 5%;
        }

    .hero2 {
        background-image: url('https://media.discordapp.net/attachments/1107599847562952794/1107974604867244072/photo-login.png?width=1600&height=842');
        background-size: cover;
        background-position: center;
        border-bottom: 6px solid #FF4401;
        width: 100%;
        height: 30vh;
        display: flex;
        align-items: center;
    }
    
</style>