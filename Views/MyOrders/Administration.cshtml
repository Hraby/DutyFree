@model DutyFree.Models.AdminViewModel

@{
    ViewBag.Title = "Admin - Historie objednávek";
    Layout = "_Layout";
}

<section class="hero2">
    <h1 class="display-4 text-white text-center"><strong>Historie objednávek</strong></h1>
</section>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Jméno</th>
                <th scope="col">Datum a čas</th>
                <th scope="col">Produkt</th>
                <th scope="col">Množství</th>
                <th scope="col">Cena</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders.OrderByDescending(o => o.DateCreated))
            {
                var user = Model.Users.FirstOrDefault(u => u.UserId == order.UserId);
                if (user != null)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@order.DateCreated</td>
                        <td>@order.Name</td>
                        <td>1 ks</td>
                        <td>@order.Price Kč</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    ::selection {
        background-color: #FF4401;
        color: white;
    }

    .container {
        margin-top: 2%;
    }

    .hero2 {
        background-image: url('https://media.discordapp.net/attachments/1107599847562952794/1107974604867244072/photo-login.png?width=1600&height=842');
        background-size: cover;
        background-position: center;
        border-bottom: 6px solid #FF4401;
        width: 100%;
        height: 30vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
