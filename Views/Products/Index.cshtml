@model DutyFree.Models.AdminViewModel
@{
    ViewData["Title"] = "Produkty";
}

<section class="hero">
    <div class="container">
        <div class="vyhledavaci-lista">
            <h1 class="text-center text-white">Na co máš chuť?</h1>
            <div class="input-group mb-3 rounded-0">
                <input type="text" class="form-control rounded-0">
                <div class="input-group-next">
                    <button class="btn rounded-0" type="button">Vyhledat</button>
                </div>
            </div>
        </div>
    </div>
</section>
 

<div class="karticka">
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var product in Model.Products)
            {
            <div class="col">
                <div class="card">
                    <img src="toast.png" class="card-img-top" alt="Toast">
                    <div class="card-body">
                        <h5 class="card-title text-center">@product.Name</h5>
                        <p class="text-success text-left">Skladem @product.Quantity ks</p>
                        <hr>
                        <div class="row d-flex align-items-center justify-content-center">
                            <div class="col d-flex align-items-center justify-content-between flex-row">
                                <p class="text-danger" style="margin: 0">@product.Price Kč</p>
                                <a href="#" class="btn rounded-0">Koupit</a>
                            </div>    
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>


<style>
    .hero
    {
        background-image: url('https://media.discordapp.net/attachments/1107599847562952794/1107974604867244072/photo-login.png?width=1600&height=842'); 
        background-size: cover; 
        background-position: center; 
        border-bottom: 6px solid #FF4401;
        width: 100%; 
        height: 50vh;
    }
    
    .vyhledavaci-lista
    {
        padding-top: 15%;
    }
    
    .input-group-next
    {
        padding-left: 1%;
    }
    
   .btn
       {
           background-color: #FF4401;
           color: white;
           border-color: #FF4401;
           }
           
       .btn:hover
       {
           background-color: white;
           color: #FF4401;
           border-color: #FF4401;
           }  
            
    .karticka
    {
        padding-top: 5%;
        padding-left: 3%;
        padding-right: 3%;
    }
     
</style>