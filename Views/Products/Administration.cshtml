@model DutyFree.Models.AdminViewModel

@{
    ViewBag.Title = "Product admin panel";
    Layout = "_Layout";
}

<section class="hero2">
    <div class="container">
        <h1 class="display-4 text-white text-center"><strong>Správa produktů</strong></h1>
    </div>
</section>

<div class="container">


    <!--Add icon-->
    <div class="addIcon">
        <svg xmlns="http://www.w3.org/2000/svg" onclick="product_add()" cursor="pointer" width="30" height="30" fill="#FF4401" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
        </svg>
    </div>


    <div class="container">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th colspan="2" class="text-center">Produkt</th>
                    <th>Obrázek</th>
                    <th>Cena za ks</th>
                    <th>Aktuální množství</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td colspan="2">@product.Name</td>
                        <td><img src="obrazek1.jpg" alt="Obrázek 1"></td>
                        <td>@product.Price</td>
                        <td>@product.Quantity</td>
                        <td class="buttons" style="display: flex; align-items: center;">
                            <svg xmlns="http://www.w3.org/2000/svg" onclick="product_edit()" cursor="pointer" width="25" height="25" fill="#FF4401" class="bi bi-wrench" viewBox="0 0 16 16" style="transform: scale(0.8);">
                                <path d="M.102 2.223A3.004 3.004 0 0 0 3.78 5.897l6.341 6.252A3.003 3.003 0 0 0 13 16a3 3 0 1 0-.851-5.878L5.897 3.781A3.004 3.004 0 0 0 2.223.1l2.141 2.142L4 4l-1.757.364L.102 2.223zm13.37 9.019.528.026.287.445.445.287.026.529L15 13l-.242.471-.026.529-.445.287-.287.445-.529.026L13 15l-.471-.242-.529-.026-.287-.445-.445-.287-.026-.529L11 13l.242-.471.026-.529.445-.287.287-.445.529-.026L13 11l.471.242z" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" onclick="product_delete()" cursor="pointer" width="25" height="25" fill="#FF4401" class="bi bi-x" viewBox="0 0 16 16" style="width: 25px; height: 25px;">
                                <path d="M4.354 4.354a.5.5 0 0 1 .708 0L8 7.293l2.938-2.939a.5.5 0 1 1 .708.708L8.707 8l2.939 2.938a.5.5 0 0 1-.708.708L8 8.707l-2.938 2.939a.5.5 0 0 1-.708-.708L7.293 8 4.354 5.062a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script>
        // Vytvoření produktu
        function product_add() {
            const table = $('table tbody');
            table.prepend(
                '<tr>'
                + '<td class="name">'
                + '<input type="text" class="form-control" name="Name" placeholder="Název" />'
                + '</td>'
                + '<td class="image">'
                + '<input type="file" class="form-control" name="Image" />'
                + '</td>'
                + '<td class="price">'
                + '<input type="number" class="form-control" name="Price" placeholder="Cena" />'
                + '</td>'
                + '<td class="quantity">'
                + '<input type="number" class="form-control" name="Quantity" />'
                + '</td>'
                + '<td class="buttons" style="width: 50px;">'
                + '<svg xmlns="http://www.w3.org/2000/svg" onclick="product_delete()" cursor="pointer" width="25" height="25" fill="#FF4401" class="bi bi-x" viewBox="0 0 16 16">'
                + '<path d="M4.354 4.354a.5.5 0 0 1 .708 0L8 7.293l2.938-2.939a.5.5 0 1 1 .708.708L8.707 8l2.939 2.938a.5.5 0 0 1-.708.708L8 8.707l-2.938 2.939a.5.5 0 0 1-.708-.708L7.293 8 4.354 5.062a.5.5 0 0 1 0-.708z"/>'
                + '</svg>'
                + '</td>'
                + '</tr>'
            );
        }

    // Odstranění produktu
    function product_delete() {
        var row = event.target.closest('tr');

        // Potvrzení od uživatele
        var confirmDelete = confirm("Opravdu chcete smazat tento produkt?");

        if (confirmDelete) {
            row.remove();
        }
    }

</script>




<style>
    .addIcon {
        margin-top: 20px;
        margin-left: 87%;
    }


    .hero2 {
        background-image: url('https://media.discordapp.net/attachments/1107599847562952794/1107974604867244072/photo-login.png?width=1600&height=842');
        background-size: cover;
        background-position: center;
        border-bottom: 6px solid #FF4401;
        width: 100%;
        height: 30vh;
    }

    h1 {
        padding-top: 9%;
    }

</style>