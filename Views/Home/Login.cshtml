
@{
    ViewData["Title"] = "DutyFree - Přihlášení";
}

<section class="hero">
    <h1 class="display-4 text-white text-center"><strong>Přihlaste se</strong></h1>
</section>

<div class="container">
    
    <form>
        <div class="form-group">
            <label for="exampleInputText1">Jméno:</label>
            <input type="text" class="form-control rounded-0" id="exampleInputText1" aria-describedby="TextHelp">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">E-mail:</label>
            <input type="email" class="form-control rounded-0" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="exampleFormControlFile1">Profilový obrázek:</label>
            <input type="file" class="form-control rounded-0" id="exampleFormControlFile1">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary rounded-0">Odeslat</button>
        </div>
    </form>
</div>

<style>

    .hero
    {
            background-image: url('https://media.discordapp.net/attachments/1107599847562952794/1107974604867244072/photo-login.png?width=1600&height=842'); 
            background-size: cover; 
            background-position: center; 
            border-bottom: 6px solid #FF4401;
            width: 100%; 
            height: 30vh;
        }
    h1
    {
        color: white;
        padding-top: 7%;
        }
        
     form
     {
        padding-top: 4%
        }
        
